<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".PostulanteRegistroActivity">

    <!-- TITULO -->
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo postulante"
        android:textAlignment="center"
        android:textSize="34sp"
        android:translationX="75dp"
        android:translationY="60dp"/>

    <!-- PRIMER DATO - DNI -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="120dp"
        android:layout_below="@id/textView11" />

    <EditText
        android:id="@+id/textDNI"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:singleLine="false"
        android:translationX="185dp"
        android:translationY="105dp"
        android:layout_below="@id/textView11"/>

    <!-- SEGUNDO DATO - NOMBRES -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombres"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="170dp"
        android:layout_below="@id/textView5" />

    <EditText
        android:id="@+id/textNames"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:translationX="185dp"
        android:translationY="133dp"
        android:layout_below="@id/textDNI"/>

    <!-- TERCER DATO - APELLIDOS -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="220dp"
        android:layout_below="@id/textView6"/>

    <EditText
        android:id="@+id/textSurname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:translationX="185dp"
        android:translationY="160dp"
        android:layout_below="@id/textNames"/>

    <!-- CUARTO DATO - FECHA NACIMIENTO -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha nacimiento"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="270dp"
        android:layout_below="@id/textView7"/>

    <EditText
        android:id="@+id/textBirth"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:translationX="185dp"
        android:translationY="185dp"
        android:layout_below="@id/textSurname"/>

    <!-- QUINTO DATO - COLEGIO -->
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colegio"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="320dp"
        android:layout_below="@id/textView8"/>

    <EditText
        android:id="@+id/textSchool"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:translationX="185dp"
        android:translationY="214dp"
        android:layout_below="@id/textBirth"/>

    <!-- SEXTO DATO - CARRERA -->
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrera"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationX="50dp"
        android:translationY="370dp"
        android:layout_below="@id/textView9"/>

    <EditText
        android:id="@+id/textProfession"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:translationX="185dp"
        android:translationY="238dp"
        android:layout_below="@id/textSchool"/>

    <!-- BOTON - REGISTRAR -->
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:drawableLeft="@drawable/agregar"
        android:background="@drawable/button_shape"
        android:translationX="40dp"
        android:translationY="440dp"
        android:layout_below="@id/textView10" />

    <!-- BOTON - LIMPIAR -->
    <Button
        android:id="@+id/buttonLimpiar"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textProfession"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/limpiar"
        android:text="Limpiar"
        android:translationX="210dp"
        android:translationY="300dp" />

</RelativeLayout >